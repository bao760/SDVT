close.TextColor3 = Color3.fromRGB(255, 80, 80)
close.MouseButton1Click:Connect(function() gui:Destroy() end)

-- BUTTON CREATOR
local function CreateButton(txt, y)
    local btn = Instance.new("TextButton", main)
    btn.Size = UDim2.new(0.8, 0, 0, 50)
    btn.Position = UDim2.new(0.1, 0, 0, y)
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 20
    btn.Text = txt
    btn.AutoButtonColor = false
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 15)

    -- Hover Effect neon
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(50, 50, 80)}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(30, 30, 50)}):Play()
    end)

    return btn
end

----------------------------------------------------
-- MAIN BUTTONS
----------------------------------------------------
local bZone = CreateButton("ðŸ”· Mariana", 90)
local bFarm = CreateButton("ðŸŒ¾ Farm", 160)

----------------------------------------------------
-- ZONE MENU
----------------------------------------------------
function openZoneMenu()
    main:ClearAllChildren()

    local t = title:Clone()
    t.Parent = main
    t.Text = "ðŸŒŒ Zone Selector"

    local x = close:Clone()
    x.Parent = main
    x.MouseButton1Click:Connect(function() gui:Destroy() end)

    local function tp(v)
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(v)
    end

    local z1 = CreateButton("Zone 1", 100)
    z1.Parent = main
    z1.MouseButton1Click:Connect(function() tp(Vector3.new(-3172.89, -2036.87, 4020.55)) end)

    local z2 = CreateButton("Zone 2", 170)
    z2.Parent = main
    z2.MouseButton1Click:Connect(function() tp(Vector3.new(720.49, -3360.50, -1579.38)) end)

    local z3 = CreateButton("Zone 3", 240)
    z3.Parent = main
    z3.MouseButton1Click:Connect(function() tp(Vector3.new(-13471.30, -11041.90, 167.35)) end)
end

----------------------------------------------------
-- FARM MENU
----------------------------------------------------
function openFarmMenu()
    main:ClearAllChildren()

    local t = title:Clone()
    t.Parent = main
    t.Text = "ðŸŒ¾ Farm Zones"

    local x = close:Clone()
    x.Parent = main
    x.MouseButton1Click:Connect(function() gui:Destroy() end)

    local function tp(v)
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(v)
    end

    local f1 = CreateButton("ðŸ”¥ Farm Lv Best", 100)
    f1.Parent = main
    f1.MouseButton1Click:Connect(function() tp(Vector3.new(-3172.89, -2036.87, 4020.55)) end)

    local f2 = CreateButton("ðŸ’° Farm Lumin Money", 170)
    f2.Parent = main
    f2.MouseButton1Click:Connect(function() tp(Vector3.new(720.49, -3360.50, -1579.38)) end)
end

-- MAIN BUTTONS BIND
bZone.MouseButton1Click:Connect(openZoneMenu)
bFarm.MouseButton1Click:Connect(openFarmMenu)
