-- XÃ³a GUI cÅ©
pcall(function() game.CoreGui.SDVT_MENU:Destroy() end)

local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "SDVT_MENU"

local TweenService = game:GetService("TweenService")

-- MAIN FRAME Lá»šN
local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 400, 0, 400) -- báº£ng to
main.Position = UDim2.new(0.5, -200, 0.4, -200)
main.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
main.BorderSizePixel = 0
main.ClipsDescendants = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 20)

-- Glow láº¥p lÃ¡nh
local glow = Instance.new("ImageLabel", main)
glow.Size = UDim2.new(1, 100, 1, 100)
glow.Position = UDim2.new(0, -50, 0, -50)
glow.Image = "rbxassetid://49950213"
glow.ImageColor3 = Color3.fromRGB(0, 255, 255)
glow.ImageTransparency = 0.9
glow.ScaleType = Enum.ScaleType.Stretch
glow.ZIndex = 0

-- Gradient Aurora chuyá»ƒn Ä‘á»™ng
local grad = Instance.new("UIGradient", main)
grad.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)),
    ColorSequenceKeypoint.new(0.33, Color3.fromRGB(255, 0, 255)),
    ColorSequenceKeypoint.new(0.66, Color3.fromRGB(0, 128, 255)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 150))
}
grad.Rotation = 45

task.spawn(function()
    while task.wait(0.05) do
        grad.Rotation += 1
    end
end)

-- TITLE
