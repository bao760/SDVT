-- Notify
local function Notify(msg)
    pcall(function()
        game.StarterGui:SetCore("SendNotification", {
            Title = "SDVT Notice";
            Text = msg;
            Duration = 3;
        })
    end)
end

-- T·ªça ƒë·ªô
local pos1 = Vector3.new(1377.12, -603.74, 2338.20)
local pos2 = Vector3.new(-1092.52, -337.29, -4174.61)

-- TP Function
local function TeleportTo(position)
    local plr = game.Players.LocalPlayer
    if plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
        plr.Character.HumanoidRootPart.CFrame = CFrame.new(position)
        Notify("Teleport th√†nh c√¥ng!")
        gui:Destroy()
    end
end

-- Button Bind
tp1.MouseButton1Click:Connect(function()
    TeleportTo(pos1)
end)

tp2.MouseButton1Click:Connect(function()
    TeleportTo(pos2)
end)
